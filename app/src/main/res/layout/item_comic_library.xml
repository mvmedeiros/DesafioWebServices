<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:background="@color/color_blue_dark">

    <RelativeLayout
        android:id="@+id/rlComicListItemImage"
        android:background="@color/color_white"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/comicImage"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            tools:src="@drawable/comic_cover" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtComicNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlComicListItemImage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="10dp"
        tools:text="#ComicNumber!"
        android:textColor="@color/color_white"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>